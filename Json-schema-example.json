{
   "$id": "https://example.com/person.schema.json",
   "$schema": "http://json-schema.org/draft-07/schema#",
   "description": "Das Schema dient der korrekten Extraction von Metadaten aus den vorgegebenen Papern",
   "title": "Person",
   "type": "object",
   "properties": {
         "ppn": {"$ref": "#/definitions/non-empty-string",
           "description": "Der Titel des Papers"
         },
         "title": {
            "type": "array",
            "minItems": 0,
            "maxItems": 4,
            "description": "Quellentyp und Titel",
            "items": {
                "type": "object",
                "properties": {
                    "source": {"enum": ["pdf", "html", "txt", "bibtex"]},
                    "title": {"type": "string"}
                }
            }
         },

         "volume": {
           "type": "array",
           "minItems": 0,
           "maxItems": 4,
           "description": "Quellentyp und Volumen",
           "items": {
             "type": "object",
             "properties": {
               "source": {"enum": ["pdf", "html", "txt", "bibtex"]},
               "title": {"type": "string"}
             }
           }
         },

         "pages": {
           "type": "array",
           "minItems": 0,
           "maxItems": 4,
           "description": "Quellentyp und Seiten",
           "items": {
             "type": "object",
             "properties": {
               "source": {"enum": ["pdf", "html", "txt", "bibtex"]},
               "title": {"type": "string"}
             }
           }
         }
        },

        "year": {
          "type": "array",
          "minItems": 0,
          "maxItems": 4,
          "description": "Quellentyp und Erscheinungsjahr",
          "items": {
            "type": "object",
            "properties": {
              "source": {"enum": ["pdf", "html", "txt", "bibtex"]},
              "title": {"type": "string"}
            }
          }
        },

        "creators": {
          "type": "array",
          "minItems": 0,
          "maxItems": 4,
          "description": "Quellentyp und Authoren",
          "items": {
            "type": "object",
            "properties": {
              "source": {"enum": ["pdf", "html", "txt", "bibtex"]},
              "title": {"type": "string"}
            }
          }
        },

        "text_languages": {
          "type": "array",
          "minItems": 0,
          "maxItems": 4,
          "description": "Quellentyp und Sprache des Papers",
          "items": {
            "type": "object",
            "properties": {
              "source": {"enum": ["pdf", "html", "txt", "bibtex"]},
              "title": {"type": "string"}
            }
          }
        },

  "required": ["ppn", "title"],
  "definitions": {
      "non-empty-string": {
        "type": "string",
        "minLength": 1
      }
  }
}